@model CrudMAin.Models.ViewModel.ProdCat
@{
    ViewData["Title"] = "Index";
    Pager pager = new Pager();
    int pageNo = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-info text-center p-1 border border-dark">Product Detail's</h1>
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th>ProductId</th>
                        <th>ProductName</th>
                        <th>CategoreyId</th>
                        <th>CategoreyName</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var d in Model.Products)
                    {
                        <tr>
                            <td>@d.ProductId</td>
                            <td>@d.ProductName</td>
                            <td>@d.CategoryId</td>
                            <td>@d.Category.CategoryName</td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Product" asp-route-id="@d.ProductId">Edit</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@d.ProductId">Delete</a>
                                <a class="btn btn-sm btn-warning" asp-action="Details" asp-controller="Product" asp-route-id="@d.ProductId">Details</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>

<partial name ="_pager" model ="@pager"/>

